{# Nội dung trong block content #}
{% block content %}
<form name="frmLoaiSanPham" id="frmKhuyenMai" method="post" action="/shoponline1/backend/khuyenmai/edit.php?km_ma={{ khuyenmai.km_ma }}">
    <div class="form-group">
        <label for="km_ma">Mã khuyến mãi</label>
        <input type="text" class="form-control" id="km_ma" name="km_ma" placeholder="Mã khuyến mãi" readonly value="{{ khuyenmai.km_ma }}">
        <small id="km_maHelp" class="form-text text-muted">Mã khuyến mãi không được hiệu chỉnh.</small>
    </div>
    <div class="form-group">
        <label for="km_ten">Tên khuyến mãi</label>
        <input type="text" class="form-control" id="km_ten" name="km_ten" placeholder="Tên loại khuyến mãi" value="{{ khuyenmai.km_ten }}">
    </div>
    <div class="form-group">
        <label for="km_noidung">Mô tả nội dung khuyến mãi </label>
        <input type="text" class="form-control" id="km_noidung" name="km_noidung" placeholder="Mô tả nội dung khuyến mãi" value="{{ khuyenmai.km_noidung }}">
    </div>
    <div class="form-group">
        <label for="km_tungay">Mô tả ngày bắt đầu khuyến mãi </label>
        <input type="text" class="form-control" id="km_tungay" name="km_tungay" placeholder="Mô tả ngày khuyến mãi" value="{{ khuyenmai.km_tungay }}">
    </div>
    <div class="form-group">
        <label for="km_denngay">Mô tả ngày hết hạn khuyến mãi </label>
        <input type="text" class="form-control" id="km_denngay" name="km_denngay" placeholder="Mô tả ngày hết hạn khuyến mãi" value="{{ khuyenmai.km_denngay }}">
    </div>

    <button class="btn btn-primary" name="btnCapNhat">Cập nhật</button>
</form>
{% endblock %}
{# End Nội dung trong block content #}